<html>
  <body>
  <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
	<div style="width: 100%; height: 51px; background-color: #EEE; line-height: 51px;">
	<a id="loginbutton" style="float: right; margin-right: 33px; cursor: pointer; color: green;">Game Login</a>
	<span id="welcome" style="float: right; margin-right: 33px;"></span>
	</div>
	<div id="loginbox">
	<div id="shadow" style="position: fixed; width: 100%; height: 100%; background-color: #DDD; opacity: .4; z-index: 2;"></div>
	<div id="login" style="position: fixed; top: 50%; left: 50%; margin-left: -150px; margin-top: -150px; width: 300px; height: 300px; background-color: #FFF; z-index: 3;>">
	<center style="margin-top: 50px">Character Name: <input class="form-control" id="username"></input><br>
	<div class="btn btn-default" id="button">Enter</div></center>
	</div>
</div>


<div id="content">
  <font size=4><div id="where"></div></font>
  <img id="picture" src="">
  <font size=3><div id="what"></div></font>
  <font size=3><div id="inventory"></div></font>
  <font size=3><div id="next"></div></font>
  <font size=3><div id="players"></div></font>
</div>
  <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
  <script>

    // Get the chracter name and set it for the session 
    $(function() {

	userid="";
	$("#content").toggle();
	$("#welcome").toggle();
	$("#loginbutton").click(function() 
	{

		$("#loginbox").toggle();

	});
	$("#shadow").click(function() 
	{

		$("#loginbox").toggle();

	});
	$("#button").click(function() 
	{

		if ($("#username").val() != "") 
		{

			console.log($("#username").val());

		        $.get("/" + $("#username").val(), function(data) 
			{

			});

			$("#loginbox").toggle();
			$("#loginbutton").toggle();
			$("#welcome").html("Welcome, " + $("#username").val());
			$("#welcome").toggle();
			$("#content").toggle();
			userid = $("#username").val();
			refresh();
		}
	});

	//Refresh periodically to keep game info up to date
	function timer() 
	{
		refresh();
		setTimeout(timer, 1500);
	}

	timer();

      //Set the intital player location
      $("#where").html("booting...");
      where = "strong-hall";
	players = "me";

      function refresh() {
	$.get("/" + userid + "/players", function (data) {
		players = data;
	});

        $.get("/" + userid +"/" + where, function (data) {
           $("#where").html(data.text);
	   $("#players").html(players);

           $("#picture").attr("src",userid + "/images/" + data.where);
		console.log('hello');
           if (data.what == undefined || data.what.length == 0) {
              $("#what").html("");
           } else {
              $("#what").html("You can see : ");
              for(var i in data.what) {
                var item = data.what[i];
                $("#what").append(item);
                button = $("<button/>");
                button.text("Take " + item);
                (function(button,where,item) {
                  button.click(function() {
                    $.ajax("/" + userid + "/" + where + "/" + item,
                        { success : refresh
                        , type : "DELETE"
                        }
                    );
                    refresh();
                  });
                })(button,where,item);
                $("#what").append(button);
              }
          }

          $("#next").html("");
          for(var i in data.next) {
            $("#next").append(i);
            button = $("<button/>");
            button.text("Go " + i);
            (function(button,dest) {
              button.click(function() {
                where = dest;
                refresh();
              });
            })(button,data.next[i]);
            $("#next").append(button);
          }


        });

        $.get("/" + userid + "/inventory",function (data) {
          if (data == undefined || data.length == 0) {
             $("#inventory").html("You are not carrying anything, ");
          } else {
             $("#inventory").html("You are carrying : ");
             for(var i in data) {
               var item = data[i];
               $("#inventory").append(item);
               button = $("<button/>");
               button.text("Drop " + item);
                (function(button,where,item) {
                  button.click(function() {
                    $.ajax("/" + userid + "/" + where + "/" + item,
                        { success : refresh
                        , type : "PUT"
                        }
                    );
                    refresh();
                  });
                })(button,where,item);
               $("#inventory").append(button);
            }
          }
        });
      }

      refresh();

    });
  </script>
  </body>
</html>

